
<%
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>
<html>
  <body>
    <h1>You're using a layout with some changes</h1>
    <p>here is the time now</p>
    <%= Time.now %>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <%= link_to('this is a link to Google', 'http://google.com') %>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
      <h1>Yoshi is my wife</h1>
    </div>
    <div>
      <%= link_to('this is a link to the BBC', 'http://bbc.co.uk') %>
    </div>
  </body>
</html>